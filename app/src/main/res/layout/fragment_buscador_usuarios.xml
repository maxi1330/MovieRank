<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_gris"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.integrador.grupo2android.proyectointegrador.Vista.Fragments.FragmentBuscadorUsuarios">

    <android.support.v7.widget.CardView
        android:id="@+id/cardBuscadorGeneral"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#cfd8dc"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        app:cardElevation="15dp">
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="QuÃ© vemos hoy?"
            android:textSize="20dp"
            android:textColorHint="#8e8c8c"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#6b6b6b"
            android:layout_gravity="end">
            <ImageButton
                android:id="@+id/imageButtonSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#6b6b6b"
                app:srcCompat="@drawable/ic_search_blackbuscador_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewListadoEnBuscadorUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
