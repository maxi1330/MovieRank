<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    android:background="#FF263238">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FF263238"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="wrap_content"
                    android:layout_height="255dp"
                    android:layout_margin="2dp"
                    android:layout_weight="30"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="19dp">

                    <LinearLayout
                        android:id="@+id/buttonPrimeraMasVotada"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImageViewMasVotada1"
                            android:layout_margin="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:src="@drawable/imagen_defecto" />

                        <TextView
                            android:id="@+id/tituloPeliculaMasVotada1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:ellipsize="end"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Titulo Película" />

                        <TextView
                            android:id="@+id/textViewPuntuacion1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#1de9b6"
                            android:gravity="center"
                            android:text="9.2"
                            android:textColor="#fff"
                            android:textSize="30dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="255dp"
                    android:layout_margin="2dp"
                    android:layout_weight="30"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="19dp">

                    <LinearLayout
                        android:id="@+id/buttonSegundaMasVotada"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImageViewMasVotada2"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:layout_margin="2dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/imagen_defecto" />

                        <TextView
                            android:id="@+id/tituloPeliculaMasVotada2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:ellipsize="end"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="Titulo Película" />

                        <TextView
                            android:id="@+id/textViewPuntuacion2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#becc65"
                            android:gravity="center"
                            android:text="8.7"
                            android:textColor="#fff"
                            android:textSize="30dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="wrap_content"
                    android:layout_height="255dp"
                    android:layout_margin="2dp"
                    android:layout_weight="30"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="19dp">

                    <LinearLayout
                        android:id="@+id/buttonTerceraMasVotada"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImageViewMasVotada3"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:src="@drawable/imagen_defecto" />

                        <TextView
                            android:id="@+id/tituloPeliculaMasVotada3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:ellipsize="end"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Titulo Película" />

                        <TextView
                            android:id="@+id/textViewPuntuacion3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#b39ddb"
                            android:gravity="center"
                            android:text="8.5"
                            android:textColor="#fff"
                            android:textSize="30dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF263238"
            android:orientation="vertical">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FF607D8B">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="Tus favoritos"
                    android:textColor="#f2f2f2"
                    android:textSize="17dp" />

            </android.support.design.widget.CoordinatorLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerTuSeleccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">
            </android.support.v7.widget.RecyclerView>

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FF607D8B">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="Ver más tarde"
                    android:textColor="#f2f2f2"
                    android:textSize="17dp" />

            </android.support.design.widget.CoordinatorLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerProximosEstrenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

